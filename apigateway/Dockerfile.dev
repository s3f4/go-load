FROM golang:latest

WORKDIR /go/src/github.com/s3f4/go-load/apigateway

COPY . .

RUN cmd/install-terraform.sh
RUN cmd/install-ansible.sh

RUN ["go", "get", "github.com/githubnemo/CompileDaemon"]
EXPOSE 3001

ADD https://github.com/ufoscout/docker-compose-wait/releases/download/2.7.3/wait /wait
RUN chmod +x /wait

CMD /wait && CompileDaemon -directory=cmd/. -log-prefix=false -build="go build -o apigateway" -command="./cmd/apigateway"